# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
# For local MongoDB:
MONGODB_URI=mongodb://localhost:27017/minicrm
# For MongoDB Atlas, set the full connection string in your .env file (DO NOT commit)
# Pattern: mongodb+srv://username:password@cluster.mongodb.net/minicrm

# JWT Configuration
# Use a strong random string (min 32 characters) - Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=
JWT_EXPIRE=7d

# CORS Configuration (Frontend URL)
FRONTEND_URL=http://localhost:3000
